{
  "mcpServers": {
    "brave-search": {
      "command": "fish",
      "args": [
        "-c",
        "npx -y @modelcontextprotocol/server-brave-search"
      ],
      "env": {
        "_BRAVE_API_KEY": "API_KEY"
      }
    },
    "filesystem": {
      "command": "npx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "/Users/vlad"
      ]
    },
    "memory": {
      "command": "fish",
      "args": [
        "-c",
        "npx -y @modelcontextprotocol/server-memory"
      ],
      "env": {
        "_MEMORY_FILE_PATH": "path"
      }
    }
  }
}